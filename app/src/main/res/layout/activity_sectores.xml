<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainactivity_background"
    tools:context=".SectoresActivity">

//

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:paddingVertical="4dp"
            app:srcCompat="@drawable/mountain" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sectores"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="477dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/lstListaSectores"
                            android:layout_width="match_parent"
                            android:layout_height="475dp" />
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMainActivityAgregar"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="159dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:insetLeft="5dp"
                        android:insetRight="5dp"
                        android:onClick="fn_NuevoSector"
                        android:text="Agregar" />

                    <Button
                        android:id="@+id/btnMainActivityEditar"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:insetLeft="5dp"
                        android:insetRight="5dp"
                        android:text="Editar" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnMainActivityEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:insetLeft="5dp"
                        android:insetRight="5dp"
                        android:text="Eliminar" />

                    <Button
                        android:id="@+id/btnMainActivityRegresar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:insetLeft="5dp"
                        android:insetRight="5dp"
                        android:onClick="fn_Regresar"
                        android:text="Regresar" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
//
</androidx.constraintlayout.widget.ConstraintLayout>