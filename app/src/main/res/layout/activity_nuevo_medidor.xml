<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nuevo_medidor_background"
    tools:context=".NuevoMedidorActivity">


    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="716dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/water_meter_icon"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textaView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20px"
            android:text="Agregar Medidor"
            android:textAlignment="center"
            android:textColor="@color/Rosado"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="118dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sector:"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="161dp" />

        <EditText
            android:id="@+id/txtMedidorSector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pertence al sector:"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="198dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consecutivo"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="161dp" />

        <EditText
            android:id="@+id/txtMedidorConsecutivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Consecutivo"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Cliente"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="161dp" />

        <EditText
            android:id="@+id/txtMedidorDuenio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre del Cliente"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secuencia"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="161dp" />

        <EditText
            android:id="@+id/txtMedidorSecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Secuencia"
            android:inputType="textPersonName"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="161dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="104dp">

            <RadioButton
                android:id="@+id/rbMedidorActivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activo" />

            <RadioButton
                android:id="@+id/rbMedidorInactivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inactivo" />
        </RadioGroup>

        <Button
            android:id="@+id/btnNuevoMedidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="fn_AgregarMedidor"
            android:text="Crear Medidor" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="fn_Regresar"
            android:text="Regresar" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>